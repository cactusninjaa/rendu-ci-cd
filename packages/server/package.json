{
  "name": "todo-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --watch --loader ts-node/esm src/index.ts",
    "test": "vitest",
    "test-coverage": "vitest run --coverage",
    "lint": "npx eslint 'src/**/*.{js,ts,tsx}'",
    "lint:commit": "commitlint --from=HEAD~1"
  },
  "dependencies": {
    "@sentry/node": "^10.29.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "lint-staged": "^16.2.7",
    "supertest": "^7.1.4",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
